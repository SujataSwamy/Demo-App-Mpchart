<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <rotate
                android:fromDegrees="110"
                android:toDegrees="0"
                android:pivotX="50%"
                android:pivotY="50%" >
            <shape
                    android:shape="line"
                    android:top="2dip" >
                <stroke
                        android:width="2dip"
                        android:color="@color/dodger_blue" />
            </shape>
        </rotate>
    </item>

</layer-list>